@model SinExWebApp20265462.ViewModels.PickupViewModel

@{
    ViewBag.Title = "Arrange A Shipment Pickup";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(Html.BeginForm("ArrangePrearrangedPickup", "Pickups", "FormMethod.Get"))) 
{
    @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Pickup</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
        <div class="form-group">
            @Html.LabelFor(model => model.Pickup.PickupDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.PickupDay, new { htmlAttributes = new { @class = "form-control", style = "width: 80px;" } })
                @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.PickupMonth, new { htmlAttributes = new { @class = "form-control", style = "width: 80px;" } })
                @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.PickupYear, new { htmlAttributes = new { @class = "form-control", style = "width: 80px;" } })
                @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.PickupHour, new { htmlAttributes = new { @class = "form-control", style = "width: 80px;" } })
                @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.PickupMinute, new { htmlAttributes = new { @class = "form-control", style = "width: 80px;" } })
                @Html.ValidationMessageFor(model => model.PickupDay, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}
