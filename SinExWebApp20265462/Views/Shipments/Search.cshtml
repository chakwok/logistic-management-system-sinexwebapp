@model IEnumerable<SinExWebApp20265462.Models.Shipment>

@{
    ViewBag.Title = "Shipment Tracking";
}

<h2>Track shipment</h2>

@using (Html.BeginForm("Track", "Shipments"))
{
    <div class="form-group">
        <label class="control-label col-md-2">Waybill ID</label>
        <div class="col-md-10">
            @Html.DropDownList("waybillId", (SelectList)ViewBag.IdList)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}